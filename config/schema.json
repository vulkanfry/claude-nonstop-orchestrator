{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "nonstop-config-schema",
  "title": "Nonstop Claude Plugin Configuration",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Plugin version"
    },
    "name": {
      "type": "string",
      "description": "Configuration name"
    },
    "project": {
      "type": "object",
      "properties": {
        "root": {
          "type": "string",
          "description": "Project root directory (supports ${PROJECT_ROOT} variable)"
        },
        "source_dirs": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Source directories to scan"
        },
        "file_extensions": {
          "type": "array",
          "items": { "type": "string" },
          "description": "File extensions to check"
        }
      }
    },
    "quality_rules": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "enabled": { "type": "boolean" },
          "pattern": { "type": "string" },
          "exclude_patterns": {
            "type": "array",
            "items": { "type": "string" }
          },
          "message": { "type": "string" },
          "severity": {
            "type": "string",
            "enum": ["error", "warning", "info"]
          }
        },
        "required": ["enabled", "pattern"]
      }
    },
    "skills": {
      "type": "object",
      "properties": {
        "auto_invoke": {
          "type": "array",
          "items": { "type": "string" }
        },
        "available": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "hooks": {
      "type": "object"
    },
    "commands": {
      "type": "object"
    }
  }
}
